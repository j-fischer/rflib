{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/master/cspell.schema.json",
    "version": "0.2",
    "dictionaryDefinitions": [
        {
            "name": "workspace",
            "path": "./cspell-dict.txt",
            "description": "Custom Workspace Dictionary",
            "addWords": true,
            "scope": "workspace"
        }
    ],
    "dictionaries": ["workspace"],
    "ignorePaths": [
        ".eslintignore",
        ".gitattributes",
        ".gitignore",
        ".prettierignore",
        "**/.gitignore",
        "**/.vscode/**",
        "**/.sfdx/**",
        "**/.circleci/**",
        "**/.tmp/**",
        "**/{cspell.*,cSpell.*,.cspell.*,cspell.config.*}",
        "*.{png,jpg,pdf}",
        "*.{report,dashboard,flexipage}*",
        "**/classes/SOQL*",
        "**/*.snap",
        "**/*.trie",
        "**/coverage/**",
        "**/jest.config.js",
        "**/node_modules/**",
        "**/package*.json",
        "**/tsconfig.json",
        "cspell.json",
        "lcov.info",
        "Gruntfile.js",
        "gulpfile.js",
        "package*.json",
        "CHANGELOG.md",
        ".aidigest*"
    ],
    "ignoreWords": ["commitcomment"],
    "ignoreRegExpList": ["/sf package install --package [\\w]{15,18} --target-org .*/g"]
}
