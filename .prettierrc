{
    "plugins": ["prettier-plugin-apex"],
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 120,
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": { "parser": "html" }
        },
        {
            "files": "*.{trigger,cls}",
            "options": { "parser": "apex" }
        },
        {
            "files": "*.{apex}",
            "options": { "parser": "apex-anonymous" }
        }
    ]
}
